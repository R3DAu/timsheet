{
  "name": "timesheet-system",
  "version": "1.0.0",
  "description": "Comprehensive timesheet management system with approval workflow",
  "main": "src/server.js",
  "nodemonConfig": {
    "ignore": [
      "public/js/app.js",
      "public/js/app.js.map"
    ]
  },
  "scripts": {
    "dev": "nodemon src/server.js",
    "start": "node src/server.js",
    "build": "esbuild public/js/modules/main.js --bundle --outfile=public/js/app.js --format=iife --global-name=App",
    "watch": "esbuild public/js/modules/main.js --bundle --outfile=public/js/app.js --format=iife --global-name=App --watch",
    "db:migrate": "npx prisma migrate dev",
    "db:studio": "npx prisma studio",
    "db:seed": "node prisma/seed.js",
    "db:sqlite": "node scripts/set-db-provider.js sqlite && npx prisma db push",
    "db:postgres": "node scripts/set-db-provider.js postgresql && npx prisma db push",
    "reminder:check": "node src/jobs/reminder-check.js"
  },
  "keywords": [
    "timesheet",
    "tracking",
    "approval"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@prisma/client": "^6.19.2",
    "@quixo3/prisma-session-store": "^3.1.19",
    "axios": "^1.7.9",
    "bcrypt": "^6.0.0",
    "connect-session-sequelize": "^7.1.7",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "express-session": "^1.18.1",
    "express-validator": "^7.2.0",
    "morgan": "^1.10.0",
    "node-cron": "^3.0.3",
    "nodemailer": "^8.0.1",
    "playwright": "^1.58.2",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "twilio": "^5.3.5",
    "winston": "^3.19.0",
    "winston-daily-rotate-file": "^5.0.0",
    "xero-node": "^13.4.0"
  },
  "devDependencies": {
    "esbuild": "^0.27.3",
    "nodemon": "^3.1.9",
    "prisma": "^6.19.2"
  }
}
