# Generate random 32-character encryption key (for Xero data encryption):
# node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"

# Database
DATABASE_PROVIDER=sqlite
# Development: use a separate DB to avoid touching production data
# DATABASE_URL=file:./dev.db
# Production (SQLite): set by docker-entrypoint.sh, or override here
# DATABASE_URL=file:/app/data/timesheet.db
# Production (PostgreSQL):
# DATABASE_PROVIDER=postgresql
# DATABASE_URL=postgresql://timesheet:changeme@postgres:5432/timesheet

# Server
PORT=3000
NODE_ENV=production
SESSION_SECRET=your-secret-key-change-this-in-production
COOKIE_SECURE=true
TRUST_PROXY=true
CORS_ORIGIN=https://timesheet.yourdomain.com

# Timezone
APP_TIMEZONE=Australia/Melbourne

# Email Configuration (SMTP)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password
EMAIL_FROM=noreply@yourdomain.com

# Twilio (SMS)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# Google Maps API
GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# Reminder Settings
REMINDER_FRIDAY_TIME=18:00
REMINDER_SUNDAY_TIME=18:00
REMINDER_ENABLED=true

# TSDATA Sync
TSDATA_API_URL=https://tsdata.techassist.au
TSDATA_API_KEY=your-tsdata-api-key
TSDATA_SYNC_ENABLED=false
TSDATA_SYNC_INTERVAL_MINUTES=30
TSDATA_SYNC_ON_STARTUP=false

# Traefik domain (used in docker-compose labels)
DOMAIN=yourdomain.com

#PLAYWRIGHT_BROWSERS_PATH=/ms_playwright

# Xero Integration
XERO_SYNC_ENABLED=false
XERO_SYNC_TIME=22:00
XERO_ENCRYPTION_KEY=your-32-char-encryption-key-change-this
XERO_CLIENT_ID=your-xero-oauth-client-id
XERO_CLIENT_SECRET=your-xero-oauth-client-secret
XERO_REDIRECT_URI=https://yourdomain.com/api/xero/auth/callback