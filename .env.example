# Database (in Docker, set via Dockerfile defaults â€” override only if needed)
# DATABASE_URL="file:/data/timesheet.db"
# SESSION_DB_PATH="/data/sessions.db"

# Server
PORT=3000
NODE_ENV=production
SESSION_SECRET=your-secret-key-change-this-in-production
COOKIE_SECURE=true
CORS_ORIGIN=https://timesheet.yourdomain.com

# Email Configuration (SMTP)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password
EMAIL_FROM=noreply@yourdomain.com

# Twilio (SMS)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# Google Maps API
GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# Reminder Settings
REMINDER_FRIDAY_TIME=18:00
REMINDER_SUNDAY_TIME=18:00
REMINDER_ENABLED=true

# TSDATA Sync
TSDATA_API_URL=https://tsdata.techassist.au
TSDATA_API_KEY=your-tsdata-api-key
TSDATA_SYNC_ENABLED=false
TSDATA_SYNC_INTERVAL_MINUTES=30
TSDATA_SYNC_ON_STARTUP=false

# Traefik domain (used in docker-compose labels)
DOMAIN=yourdomain.com
